        <slf4j.version>2.0.13</slf4j.version>
        <testcontainers.version>1.19.8</testcontainers.version>
        <license-maven-plugin.version>4.5</license-maven-plugin.version>
    </properties>

    <scm>
        <connection>scm:git:git://github.com:confluentinc/data-stream-composer-ser-des.git</connection>
        <developerConnection>scm:git:git@github.com:confluentinc/data-stream-composer-ser-des.git</developerConnection>
        <url>https://github.com/confluentinc/data-stream-composer-ser-des.git</url>
        <tag>HEAD</tag>
    </scm>

    <repositories>
        <repository>
            <id>cflt-pub</id>
            <url>https://packages.confluent.io/maven/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>confluent-codeartifact-central</id>
            <url>https://confluent-519856050701.dp.confluent.io/maven/maven-public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>confluent-codeartifact-internal</id>
            <url>https://confluent-519856050701.d.codeartifact.us-west-2.amazonaws.com/maven/maven/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <localCheckout>true</localCheckout>
                    <goals>clean install</goals>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
            <plugin>
                <!-- -Dlicense.skip to skip -->
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>${license-maven-plugin.version}</version>
                <!-- only have parent run this - as it covers all sub dirs -->
                <inherited>false</inherited>
                <!-- To apply the license run: -->
                <!-- â†ª mvn com.mycila:license-maven-plugin:format -->
                <configuration>
                    <aggregate>true</aggregate>
                    <licenseSets>
                        <licenseSet>
                            <inlineHeader>Copyright (C) ${license.git.copyrightYears} ${project.organization.name}
                            </inlineHeader>
                            <excludes>
                                <exclude>docs/**</exclude>
                                <exclude>docs_src/**</exclude>
                                <exclude>libs/**</exclude>
                                <exclude>**/resources/defiance_dps/**</exclude>
                                <exclude>**/resources/client_keystore/**</exclude>
                                <exclude>**/*.hcl</exclude>
                                <exclude>**/*.avsc</exclude>
                                <exclude>**/*.proto</exclude>
                                <exclude>**/*.txt</exclude>
                                <exclued>.run/**</exclued>
                                <exclude>Jenkinsfile</exclude>
                                <exclude>mk-include/**</exclude>
                                <!-- is present when run in CI -->
                                <exclude>.m2/**</exclude>
                                <exclude>.semaphore/**</exclude>
                                <exclude>.ci/**</exclude>
                                <exclude>**/*.key</exclude>
                                <exclude>**/*.next</exclude>
                                <exclude>**/*.tag</exclude>
                                <exclude>**/maven-global-settings.xml</exclude>
                                <exclude>**/*.go</exclude>
                                <exclude>**/*.sum</exclude>
                                <exclude>**/*.mod</exclude>
                                <exclude>**/*.rego</exclude>
                                <exclude>**/*.csv</exclude>
                                <exclude>**/.buildinfo</exclude>
                                <exclude>**/*.env</exclude>
                                <exclude>Makefile</exclude>
                            </excludes>
                        </licenseSet>
                    </licenseSets>
                    <mapping>
                        <java>JAVAPKG_STYLE_BEFORE</java>
                    </mapping>
                    <headerDefinitions>
                        <headerDefinition>${maven.multiModuleProjectDirectory}/src/build/myc-javapkg.xml
                        </headerDefinition>
                    </headerDefinitions>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.mycila</groupId>
                        <artifactId>license-maven-plugin-git</artifactId>
                        <version>${mycila.version}</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <goals>
                            <goal>${license.mode}</goal>
                        </goals>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <!-- Unfortunately (or not), avro plugin doesn't have an option to skip missing directories, so we have to enable it individually per module -->
                    <groupId>org.apache.avro</groupId>
                    <artifactId>avro-maven-plugin</artifactId>
                    <version>${avro.version}</version>
                    <configuration>
                        <stringType>String</stringType>
                        <enableDecimalLogicalType>true</enableDecimalLogicalType>
                    </configuration>
                    <executions>
                        <execution>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>schema</goal>
                                <goal>protocol</goal>
                                <goal>idl-protocol</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.confluent.kafka.connect</groupId>
                <artifactId>kafka-connect-datagen</artifactId>
