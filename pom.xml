        <commons-io.version>2.16.1</commons-io.version>
        <commons-codec.version>1.17.0</commons-codec.version>
        <connect.version>7.6.1-ce</connect.version>
        <connect-file.version>7.6.1-ce</connect-file.version>
        <junit-jupiter-version>5.10.3</junit-jupiter-version>
        <junit-launcher.version>1.10.3</junit-launcher.version>
        <license.mode>format</license.mode>
        <logback.version>1.5.6</logback.version>
        <lombok.version>1.18.34</lombok.version>
        <kafka-clients-version>7.6.1-ce</kafka-clients-version>
        <kafka-connect-datagen.version>0.7.0-SNAPSHOT</kafka-connect-datagen.version>
